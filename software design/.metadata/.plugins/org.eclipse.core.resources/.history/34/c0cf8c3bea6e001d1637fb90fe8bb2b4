package pit_a_pet;

import java.util.Scanner;

class Pet { //반려동물 정보를 가지고 있는 클래스 
	
	public String type;
	public String name;
	public int age;
	public String breed;
	public int weight;
	public String illness;
	public String drug;
	public String hospital;
	public String hairshop;
	
	public void RegisterPet() //반려동물 정보를 등록하는 method
	{
		Scanner scanner = new Scanner(System.in);
		System.out.println("반려동물의 종류 : ");
		type = scanner.next();
		
		System.out.println("반려동물의 이름 : ");
		name = scanner.next();
		
		System.out.println("반려동물의 나이 : ");
		age = scanner.nextInt();
		
		System.out.println("반려동물의 품종 : ");
		breed = scanner.next();
		
		System.out.println("반려동물의 무게 : ");
		weight = scanner.nextInt();
		
		System.out.println("반려동물이 앓고 있는 병(없으면 x 입력) : ");
		illness = scanner.next();

		
		System.out.println("반려동물이 복용하고  있는 약(없으면 x 입력) : ");
		drug = scanner.next();
		
		System.out.println("반려동물이 이용하고 있는 병원(없으면 x 입력) : ");
		hospital = scanner.next();
		
		System.out.println("반려동물이 이용하고 있는 반려동물 미용실(없으면 x 입력) : ");
		hairshop = scanner.next();
			
	}
}

public class ManagePetInfo {
	//public User_GUI gui = new User_GUI();
	public static int n; //등록한 반려동물 수  

	public static void main(String[] args) {
		Pet [] pet;
		pet = new Pet[5];
		
		for(int i=0; i<5; i++)
			pet[i] = new Pet();
		Scanner scanner = new Scanner(System.in);
		
		while(true) {
		
			System.out.println("반려동물 등록은 1, 반려동물 삭제는 2 : ");
			
			int opt = scanner.nextInt();
			
			if(opt==1) {
				if(n<5) {
					pet[n].RegisterPet();
					n++;
				}
				else System.out.println("반려동물은 최대 5개 등록할 수 있습니다.(현재 등록한 반려동물 : 5마리)\n");
			}
			
			else if(opt==2) {
				if(n==0)
					System.out.println("삭제할 반려동물 정보가 없습니다.\n");
				else
					DeletePet(pet);
			}
			
			else System.out.println("다시 입력해주세요.\n");
		}
	}
	
	public static void DeletePet(Pet[] pet) {
		
		int deleteNum;
		
		for(int i=0; i<n; i++)
			System.out.println(i+1+"번: "+pet[i].name+"("+pet[i].breed+")\n");
		
		System.out.println("삭제할 반려동물 번호를 입력하세요 : ");
		Scanner scanner = new Scanner(System.in);
		deleteNum = scanner.nextInt();
		
		if((deleteNum<1)||(deleteNum>n)) {
			System.out.println("번호에 해당하는 반려동물이 없습니다.\n");
			return;
		}
		
		for(int i=deleteNum-1; i<n-1; i++)
			pet[i] = pet[i+1];
		n--; //총 반려동물 마릿수 -1
		
		for(int i=0; i<n; i++)
			System.out.println(i+1+"번: "+pet[i].name+"("+pet[i].breed+")\n");
	}
	
}
