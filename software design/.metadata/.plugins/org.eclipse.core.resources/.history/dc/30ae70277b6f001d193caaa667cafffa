package software;

class Pet extends UserGUI { //반려동물 정보를 가지고 있는 클래스 
	
	public String type;
	public String name;
	public int age;
	public String breed;
	public int weight;
	public String illness;
	public String drug;
	public String hospital;
	public String hairshop;
	
	public void RegisterPet() //반려동물 정보를 등록하는 method
	{
		this.type = typeCombobox.getSelectedItem().toString();
		this.name = nameText.getText();
		this.age = Integer.parseInt(ageCombobox.getSelectedItem().toString());
		this.breed = breedText.getText();
		this.weight = Integer.parseInt(weightText.getText());
		//this.illness = illnessText.get
		
			
	}
}

public class ManagePetInfo {
	//public User_GUI gui = new User_GUI();
	public static int n; //등록한 반려동물 수  

	public static void main(String[] args) {
		Pet [] pet;
		pet = new Pet[5];
		
		for(int i=0; i<5; i++)
			pet[i] = new Pet();
	}
	
	public static void DeletePet(Pet[] pet) {
		
		int deleteNum;
		
		for(int i=0; i<n; i++)
			System.out.println(i+1+"번: "+pet[i].name+"("+pet[i].breed+")\n");
		
		System.out.println("삭제할 반려동물 번호를 입력하세요 : ");
		Scanner scanner = new Scanner(System.in);
		deleteNum = scanner.nextInt();
		
		if((deleteNum<1)||(deleteNum>n)) {
			System.out.println("번호에 해당하는 반려동물이 없습니다.\n");
			return;
		}
		
		for(int i=deleteNum-1; i<n-1; i++)
			pet[i] = pet[i+1];
		n--; //총 반려동물 마릿수 -1
		
		for(int i=0; i<n; i++)
			System.out.println(i+1+"번: "+pet[i].name+"("+pet[i].breed+")\n");
	}
	
}
