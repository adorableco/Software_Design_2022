	public static int n; //등록한 반려동물 수  
	public Pet [] pet;
	
	public ManagePetInfo() {
		
		pet = new Pet[5];
		
		for(int i=0; i<5; i++)
			pet[i] = new Pet();
	}
	
	public Pet registerPet() {
		n++;
		return pet[n-1];
	}
	
